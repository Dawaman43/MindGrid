{
  "name": "server",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "cf:dev": "bunx wrangler dev",
    "cf:deploy": "bunx wrangler deploy",
    "cf:delete": "bunx wrangler delete",
    "cf:tail": "bunx wrangler tail",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.mjs"
  },
  "dependencies": {
    "@MindGrid/api": "workspace:*",
    "@MindGrid/auth": "workspace:*",
    "@MindGrid/db": "workspace:*",
    "@MindGrid/env": "workspace:*",
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/trpc": "^1.1.0",
    "@hono/trpc-server": "^0.4.0",
    "@trpc/server": "catalog:",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "elysia": "catalog:",
    "@sinclair/typebox": "^0.34.10",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@MindGrid/config": "workspace:*",
    "@types/bun": "catalog:",
    "tsdown": "^0.16.5",
    "typescript": "catalog:"
  }
}
